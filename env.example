# Database
DATABASE_URL="postgresql://zyra_user:password@localhost:5432/zyra_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT & Security
JWT_SECRET="your-super-secret-jwt-key-here"
COOKIE_SECRET="your-cookie-secret-here"

# Frontend
FRONTEND_URL="http://localhost:3000"

# AI Services
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key"

# Email Services
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@zyra.com"

# SMS & WhatsApp
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"
TWILIO_PHONE_NUMBER="+1234567890"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# Cloud Storage
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="zyra-storage"
AWS_REGION="us-east-1"

# Payment Providers
MPESA_CONSUMER_KEY="your-mpesa-consumer-key"
MPESA_CONSUMER_SECRET="your-mpesa-consumer-secret"
MPESA_SHORTCODE="your-shortcode"
MPESA_PASSKEY="your-passkey"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Automation & Workflows
N8N_API_URL="http://localhost:5678"
N8N_API_KEY="your-n8n-api-key"
LANGFLOW_API_URL="http://localhost:7860"
LANGFLOW_API_KEY="your-langflow-key"

# External Integrations
SALESFORCE_CLIENT_ID="your-salesforce-client-id"
SALESFORCE_CLIENT_SECRET="your-salesforce-client-secret"
SALESFORCE_USERNAME="your-salesforce-username"
SALESFORCE_PASSWORD="your-salesforce-password"
SALESFORCE_SECURITY_TOKEN="your-salesforce-token"

# Monitoring & Logging
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info"
ENABLE_ANALYTICS="true"

# Webhook Security
WEBHOOK_SIGNATURE_SECRET="your-webhook-signature-secret"
EMAIL_WEBHOOK_SECRET="your-email-webhook-secret"
WHATSAPP_WEBHOOK_SECRET="your-whatsapp-webhook-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=50
EMAIL_RATE_LIMIT_MAX_REQUESTS=200

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,csv,xlsx"

# Development
NODE_ENV="development"
PORT=3001
WORKER_CONCURRENCY=5

# Feature Flags
ENABLE_AI_ANALYSIS="true"
ENABLE_EMAIL_AUTOMATION="true"
ENABLE_SOCIAL_INTEGRATION="true"
ENABLE_PAYMENT_PROCESSING="true"